<svg width="700" height="450" xmlns="http://www.w3.org/2000/svg">
  <!-- Title -->
  <text x="350" y="30" font-family="Arial, sans-serif" font-size="22" font-weight="bold" text-anchor="middle" fill="#2c3e50">
    Clonal Interference: Competition, Not Wave Mechanics
  </text>

  <!-- Timeline -->
  <line x1="50" y1="100" x2="650" y2="100" stroke="#95a5a6" stroke-width="2"/>
  <text x="50" y="90" font-family="Arial, sans-serif" font-size="12" fill="#7f8c8d">Time →</text>

  <!-- Stage 1: Original Population -->
  <g transform="translate(80, 120)">
    <text x="0" y="-10" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#2c3e50">
      Stage 1: Original Population
    </text>
    <circle cx="0" cy="20" r="8" fill="#95a5a6"/>
    <circle cx="0" cy="40" r="8" fill="#95a5a6"/>
    <circle cx="0" cy="60" r="8" fill="#95a5a6"/>
    <circle cx="0" cy="80" r="8" fill="#95a5a6"/>
    <text x="0" y="110" font-family="Arial, sans-serif" font-size="11" text-anchor="middle" fill="#7f8c8d">
      All identical
    </text>
  </g>

  <!-- Stage 2: Mutations Arise -->
  <g transform="translate(230, 120)">
    <text x="0" y="-10" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#2c3e50">
      Stage 2: Mutations
    </text>
    <circle cx="0" cy="20" r="8" fill="#95a5a6"/>
    <circle cx="0" cy="40" r="10" fill="#3498db" stroke="#2c3e50" stroke-width="2"/>
    <text x="15" cy="42" font-family="Arial, sans-serif" font-size="10" fill="#3498db">Mutation A</text>
    <circle cx="0" cy="60" r="8" fill="#95a5a6"/>
    <circle cx="0" cy="80" r="10" fill="#e74c3c" stroke="#2c3e50" stroke-width="2"/>
    <text x="15" cy="82" font-family="Arial, sans-serif" font-size="10" fill="#e74c3c">Mutation B</text>
    <text x="0" y="110" font-family="Arial, sans-serif" font-size="11" text-anchor="middle" fill="#7f8c8d">
      Two beneficial
    </text>
    <text x="0" y="125" font-family="Arial, sans-serif" font-size="11" text-anchor="middle" fill="#7f8c8d">
      mutants appear
    </text>
  </g>

  <!-- Stage 3: Competition -->
  <g transform="translate(400, 120)">
    <text x="0" y="-10" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#2c3e50">
      Stage 3: Competition
    </text>
    <circle cx="-10" cy="25" r="10" fill="#3498db" opacity="0.8"/>
    <circle cx="10" cy="25" r="10" fill="#3498db" opacity="0.8"/>
    <circle cx="0" cy="45" r="10" fill="#3498db" opacity="0.8"/>

    <circle cx="-10" cy="70" r="10" fill="#e74c3c" opacity="0.8"/>
    <circle cx="10" cy="70" r="10" fill="#e74c3c" opacity="0.8"/>
    <circle cx="0" cy="90" r="10" fill="#e74c3c" opacity="0.8"/>

    <!-- Vs symbol -->
    <text x="40" y="60" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#7f8c8d">VS</text>

    <text x="0" y="125" font-family="Arial, sans-serif" font-size="11" text-anchor="middle" fill="#7f8c8d">
      Both expand,
    </text>
    <text x="0" y="140" font-family="Arial, sans-serif" font-size="11" text-anchor="middle" fill="#7f8c8d">
      compete for space
    </text>
  </g>

  <!-- Stage 4: Winner -->
  <g transform="translate(570, 120)">
    <text x="0" y="-10" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#2c3e50">
      Stage 4: Winner
    </text>
    <circle cx="0" cy="20" r="10" fill="#3498db"/>
    <circle cx="0" cy="40" r="10" fill="#3498db"/>
    <circle cx="0" cy="60" r="10" fill="#3498db"/>
    <circle cx="0" cy="80" r="10" fill="#3498db"/>
    <text x="0" y="110" font-family="Arial, sans-serif" font-size="11" text-anchor="middle" fill="#3498db" font-weight="bold">
      Clone A wins
    </text>
    <text x="0" y="125" font-family="Arial, sans-serif" font-size="11" text-anchor="middle" fill="#7f8c8d">
      Clone B extinct
    </text>
  </g>

  <!-- Arrows between stages -->
  <path d="M 100 160 L 210 160" stroke="#7f8c8d" stroke-width="2" fill="none" marker-end="url(#arrow)"/>
  <path d="M 250 160 L 380 160" stroke="#7f8c8d" stroke-width="2" fill="none" marker-end="url(#arrow)"/>
  <path d="M 420 160 L 550 160" stroke="#7f8c8d" stroke-width="2" fill="none" marker-end="url(#arrow)"/>

  <!-- Explanation box -->
  <rect x="50" y="270" width="600" height="160" fill="#ecf0f1" stroke="#95a5a6" stroke-width="2" rx="5"/>
  <text x="350" y="295" font-family="Arial, sans-serif" font-size="14" font-weight="bold" text-anchor="middle" fill="#2c3e50">
    Why This Is NOT Wave Interference:
  </text>
  <text x="60" y="320" font-family="Arial, sans-serif" font-size="12" fill="#2c3e50">
    ✗ No superposition: The two clones are distinct, competing entities
  </text>
  <text x="60" y="345" font-family="Arial, sans-serif" font-size="12" fill="#2c3e50">
    ✗ No phase coherence: There are no probability amplitudes or wave functions
  </text>
  <text x="60" y="370" font-family="Arial, sans-serif" font-size="12" fill="#2c3e50">
    ✗ No interference pattern: One clone simply outcompetes and replaces the other
  </text>
  <text x="60" y="395" font-family="Arial, sans-serif" font-size="12" fill="#16a085" font-weight="bold">
    ✓ This IS competition for resources - a form of differential persistence
  </text>
  <text x="60" y="415" font-family="Arial, sans-serif" font-size="11" fill="#7f8c8d" font-style="italic">
    The metaphor "interference" is misleading here. It's a traffic jam, not wave mechanics.
  </text>

  <!-- Arrow marker -->
  <defs>
    <marker id="arrow" markerWidth="10" markerHeight="10" refX="9" refY="3" orient="auto" markerUnits="strokeWidth">
      <path d="M0,0 L0,6 L9,3 z" fill="#7f8c8d" />
    </marker>
  </defs>
</svg>